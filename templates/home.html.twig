{% extends "base.html.twig" %}

{% block title %}Dashboard{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}

{% block body %}

            <div class="d-flex flex-column flex-shrink-0 p-2 bg-secondary text-center" style="width: 500px; margin: 35px; border-radius: 10px;">
                <h1>Dashboard
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">
                    <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293zM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5z"/>
                    </svg>
                </h1>
            </div>
            
            <div class="d-flex flex-column flex-shrink-0 p-2 bg-secondary text-center" style="width: 250px; margin: 35px; border-radius: 10px;">
                <div class="p-3 border bg-dark" style="border-radius: 10px;">Number of module : {{ modules|length }}</div>
            </div>

     <div class="d-flex flex-column flex-shrink-0 p-2 bg-secondary text-center" style="margin: 35px; border-radius: 10px;">
        <div class="row row-cols-8 g-3">
            {% for key, value in modules %}
                <div class="col">
                    {% if value.getIsDown() %}
                        <div class="p-4 border bg-danger" style="border-radius: 10px;">
                            {{ value.getName() }} (datas : ???)</p>
                            <a href="/modules/id" class="btn btn-dark">Details</a>
                        </div>
                    {% endif %}
                    {% if not value.getIsDown() %}
                        <div class="p-4 border bg-info" style="border-radius: 10px;">
                            {{ value.getName() }} (datas : ???)</p>
                            <a href="/modules/id" class="btn btn-dark">Details</a>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
    
            
            <div class="d-flex flex-column flex-shrink-0 p-2 bg-secondary text-center" style="width: 250px; margin: 35px; border-radius: 10px;">
                <div class="p-3 border bg-dark" style="border-radius: 10px;">Number of data : {{ datas|length }}</div>
            </div>

     <div class="d-flex flex-column flex-shrink-0 p-2 bg-secondary text-center" style="margin: 35px; border-radius: 10px;">

                {% if datas is empty %}
                    <div class="p-3" style="margin: auto;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-database-x" viewBox="0 0 16 16">
                        <path d="M12.096 6.223A5 5 0 0 0 13 5.698V7c0 .289-.213.654-.753 1.007a4.5 4.5 0 0 1 1.753.25V4c0-1.007-.875-1.755-1.904-2.223C11.022 1.289 9.573 1 8 1s-3.022.289-4.096.777C2.875 2.245 2 2.993 2 4v9c0 1.007.875 1.755 1.904 2.223C4.978 15.71 6.427 16 8 16c.536 0 1.058-.034 1.555-.097a4.5 4.5 0 0 1-.813-.927Q8.378 15 8 15c-1.464 0-2.766-.27-3.682-.687C3.356 13.875 3 13.373 3 13v-1.302c.271.202.58.378.904.525C4.978 12.71 6.427 13 8 13h.027a4.6 4.6 0 0 1 0-1H8c-1.464 0-2.766-.27-3.682-.687C3.356 10.875 3 10.373 3 10V8.698c.271.202.58.378.904.525C4.978 9.71 6.427 10 8 10q.393 0 .774-.024a4.5 4.5 0 0 1 1.102-1.132C9.298 8.944 8.666 9 8 9c-1.464 0-2.766-.27-3.682-.687C3.356 7.875 3 7.373 3 7V5.698c.271.202.58.378.904.525C4.978 6.711 6.427 7 8 7s3.022-.289 4.096-.777M3 4c0-.374.356-.875 1.318-1.313C5.234 2.271 6.536 2 8 2s2.766.27 3.682.687C12.644 3.125 13 3.627 13 4c0 .374-.356.875-1.318 1.313C10.766 5.729 9.464 6 8 6s-2.766-.27-3.682-.687C3.356 4.875 3 4.373 3 4"/>
                        <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m-.646-4.854.646.647.646-.647a.5.5 0 0 1 .708.708l-.647.646.647.646a.5.5 0 0 1-.708.708l-.646-.647-.646.647a.5.5 0 0 1-.708-.708l.647-.646-.647-.646a.5.5 0 0 1 .708-.708"/>
                        </svg>
                    </div>
                {% endif %}
                
                {% if datas is not empty %}
                    <div class="row row-cols-8 g-3">
                        {% for key, value in datas %}
                            <div class="col">
                                <div class="p-4 border bg-dark" style="border-radius: 10px;">{{ value.getName() }}</div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}

    </div>

    </div>

{% endblock %}